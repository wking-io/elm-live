{
  "name": "elm-live",
  "version": "4.0.0-alpha.0",
  "description": "A flexible dev server for Elm. Live reload included!",
  "bin": {
    "elm-live": "bin/elm-live.js"
  },
  "main": "./lib/index.js",
  "dependencies": {
    "chalk": "^1.1.1",
    "chokidar": "3.0.0",
    "commander": "2.17.1",
    "crocks": "0.12.1",
    "cross-spawn": "5.0.1",
    "elm-hot": "1.1.0",
    "elm-serve": "0.4.0",
    "mime": "2.4.3"
  },
  "scripts": {
    "develop": "ava --watch",
    "test": "nyc ava './lib/test.js' --cwd './lib' && npm run report",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "format": "npm run standard:fix && npm run standard",
    "standard": "standard",
    "standard:fix": "standard --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "standard": {
    "ignore": [
      "websocket.js",
      "www/"
    ]
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "engineStrict": true,
  "files": [
    "lib/index.js",
    "lib/src/**/*.js",
    "bin/elm-live.js",
    "License.md"
  ],
  "license": "MIT",
  "keywords": [
    "cli",
    "tool",
    "elm"
  ],
  "author": "William King <contact@wking.io>",
  "repository": {
    "type": "git",
    "url": "git@github.com:wking-io/elm-live"
  },
  "devDependencies": {
    "ava": "1.4.1",
    "coveralls": "3.0.2",
    "dev-null": "^0.1.1",
    "eslint": "5.16.0",
    "eslint-plugin-import": "2.14.0",
    "husky": "2.3.0",
    "nyc": "14.1.1",
    "proxyquire": "^1.7.4",
    "q-stream": "^0.2.0",
    "standard": "12.0.1",
    "strip-ansi": "^3.0.0"
  }
}
